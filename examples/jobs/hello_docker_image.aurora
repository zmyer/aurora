hello_loop = Process(
  name = 'hello',
  cmdline = """
    while true; do
      echo hello world
      sleep 10
    done
  """)

task = Task(
  processes = [hello_loop],
  resources = Resources(cpu=1, ram=1*MB, disk=8*MB)
)

jobs = [
  Service(
    cluster = 'devcluster',
    environment = 'devel',
    role = 'www-data',
    name = 'hello_docker_image',
    task = task,
    container = Mesos(image=DockerImage(name='debian', tag='slim-stretch'))
  )
]

